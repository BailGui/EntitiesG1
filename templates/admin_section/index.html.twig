{% extends 'base.html.twig' %}

{% block title %}Section index{% endblock %}

{% block body %}
    <div class="container mt-5">
    <h1 class="text-center mb-5">Section index</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>SectionTitle</th>
                <th>SectionDescription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.sectionTitle }}</td>
                <td>{{ section.sectionDescription }}</td>
                <td>
                    <a class="link-info" href="{{ path('app_admin_section_show', {'id': section.id}) }}">Show |</a>
                    <a class="link-warning" href="{{ path('app_admin_section_edit', {'id': section.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    

    <a class="link-success" href="{{ path('app_admin_section_new') }}">Create new</a>
    </div>
{% endblock %}
